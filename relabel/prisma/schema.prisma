model Community {
  id           String    @id
  created_time DateTime? @db.Timestamptz(6)
  name         String?
  year       Decimal?  @db.Decimal
  description  String?
  cities      String[]
  website      String?
  structures      String[]
  status       Boolean?  @default(false)
  rgpd       Boolean?  @default(false)
  colors      String[]
  contact      String?

  @@map("communities")
}


model Project {
  id            String    @id
  created_time  DateTime? @db.Timestamptz(6)
  name          String?
  typology      String?
  description   String?
  illustrations String[]
  team          String[]
  designers     String[]
  workshops      String[]
  suppliers      String[]
  others      String[]
  website          String?
  contact          String?
  date            DateTime? @db.Timestamptz(6)
  duration      Decimal?  @db.Decimal
  colors      String[]
  fab_expertise        String?
  fab_local            String?
  fab_social           String?
  fab_tools            String?
  material_origin    String?
  material_leftovers   String?
  material_source      String?
  material_quality     String?
  design_durability    String[]
  design_reparable     String?
  design_replicability String?
  design_sharable      String?
  rgpd       Boolean?  @default(false)

  @@map("projects")
}

model Structure {
  id               String    @id
  created_time     DateTime? @db.Timestamptz(6)
  name             String?
  description      String?
  illustrations    String[]
  status           String?
  typologies        String[]
  adress           String?
  longitude        Decimal?  @db.Decimal
  latitude         Decimal?  @db.Decimal
  website          String?
  partners        String[]
  communities     String[]
  contact          String?
  projects_designer  String[]
  projects_workshop  String[]
  projects_supplier  String[]
  projects_other  String[]
  colors      String[]
  rgpd       Boolean?  @default(false)

  @@map("structures")
}